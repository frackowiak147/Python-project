def wybory(chose, table_joga, tab_info):
    if chose == "1":
        print("1 = tabela")
        print(table_joga)
    elif chose == "2":
        print("2 - info")
        print("Week Day - Dzien tygodnia")
        print("Total screen Time - Czas spedzony w telefonie [min]")
